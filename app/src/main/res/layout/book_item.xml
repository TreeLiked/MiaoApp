<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_item_layout"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/shape_for_special_boder"
    app:cardCornerRadius="5dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="8dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F3F3">

        <!--<ImageView-->
        <!--android:id="@+id/iv"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:padding="12dp"-->
        <!--android:scaleType="centerCrop"/>-->

        <TextView
            android:id="@+id/book_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingBottom="3dp"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/book_item_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_item_name"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:textColor="@color/black_light" />

        <TextView
            android:id="@+id/book_item_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_item_author"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:textColor="@color/black_light" />

        <TextView
            android:id="@+id/book_item_blInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_item_publisher"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:textColor="@color/black_light" />

        <TextView
            android:id="@+id/grade_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_item_blInfo"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:text="点击卡片查看详细信息" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
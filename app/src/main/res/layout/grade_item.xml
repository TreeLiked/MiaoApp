<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app= "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:background="#F7F7F7"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<ImageView-->
            <!--android:id="@+id/iv"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="100dp"-->
            <!--android:padding="12dp"-->
            <!--android:scaleType="centerCrop"/>-->

        <TextView
            android:id="@+id/grade_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/grade_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/grade_name"
            android:gravity="center"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/grade_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/grade_no"
            android:gravity="center"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/grade_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/grade_credit"
            android:textColor="#000"
            android:gravity="center"/>

        <TextView
            android:id="@+id/grade_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/grade_grade"
            android:padding="3dp"
            android:text="点击卡片查看详细信息"
            android:gravity="center" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
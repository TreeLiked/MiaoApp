<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_main_layout"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/shape_single_news">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/news_main_title"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_horizontal"
                android:textColor="#fffff0"
                android:textSize="20sp"
                android:text="新闻标题"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/news_main_brief_info"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_below="@id/news_main_title"
                android:layout_marginLeft="6dp"
                android:textColor="#fffff0"
                android:textSize="15sp"
                android:paddingLeft="6dp"
                android:text="新闻简介"
                android:lines="2"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/news_main_from_name"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_below="@id/news_main_brief_info"
                android:gravity="end"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:textColor="#fffff0"
                android:textSize="13sp"
                android:text="昵称"/>

            <TextView
                android:id="@+id/news_main_from_date"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_below="@id/news_main_from_name"
                android:gravity="end"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:textColor="#fffff0"
                android:textSize="12sp"
                android:text="日期"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
